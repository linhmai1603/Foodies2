<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kpos7.Foodies.MainCustomerScreen"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:layout_width="329dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_search_category_default" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1.32"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:visibility="visible"
            android:scaleType="centerCrop"/>
            //android:src="@drawable/map" />

        <Button
            android:id="@+id/map1234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View map" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/ft1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halel Cart  1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halel Cart 2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halel Cart 3" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halel Cart 4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food truck 5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/HOME"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Home"
           />

        <Button
            android:id="@+id/profile"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Profile" />

        <Button
            android:id="@+id/ORDER"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/order"
/>


        <Button
            android:id="@+id/SETTING"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Setting"
 />
    </LinearLayout>

</LinearLayout>
